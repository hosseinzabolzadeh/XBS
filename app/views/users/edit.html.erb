<% provide(:title, "Edit user") %>
<%= render 'layouts/user_pannel' %>
<div class="app_pannel">
 <h3 class="pannel_title">Update your profile</h3>
</div>
<div style="margin:auto; height:600px; width:600px;">
<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages' %>
<%= f.label :first_name %>
<%= f.text_field :first_name, :class => "input_text" %>
<%= f.label :last_name %>
<%= f.text_field :last_name, :class => "input_text" %>
<%= f.label :email %>
<%= f.text_field :email, :class => "input_text" %>
<%= f.label :password %>
<%= f.password_field :password, :class => "input_text" %>
<%= f.label :password_confirmation, "Confirm Password" %>
<%= f.password_field :password_confirmation, :class => "input_text" %>
<%= f.submit "Save changes", :class => "input_button" %>
<% end %>
</div>