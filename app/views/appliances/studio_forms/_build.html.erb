  <% end %>

  <div class="field">
    <%= label_tag :Cpu %><br />
    <%= text_field_tag :cpu %>
  </div>
  <div class="field">
    <%= label_tag :Memory %><br />
    <%= text_field_tag :memory %>
  </div>
  <div class="field">
    <%= label_tag :Swap_Space %><br />
    <%= text_field_tag :swap %>
  </div>
  <div class="field">
    <%= label_tag :Disk_Space %><br />
    <%= text_field_tag :disk %>
  </div>
  <div class="actions">
    <%= submit_tag  %>
  </div>
<% end %>  

