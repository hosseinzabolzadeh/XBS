<div class="MainHeader">
   <%= link_to "" , root_path, :class => "logo" %> 
   <div class="login_part">
    <% if signed_in? %>
     <%= link_to current_user.first_name, '#', :class => "signup_link" %>
    <% else %> 
     <%= link_to "SIGN UP NOW!", signup_path, :class => "signup_link" %>
    <% end %>
   </div> 
   <%= link_to "Home", root_path, :class => "main_menu" %>
   <%= link_to "AppMarket", "http://market.xamin.ir", :class => "main_menu" %>
    <% if signed_in? %>
    <%= link_to "My Profile", current_user, :class => "main_menu" %>
    <%= link_to "Settings", '#', :class => "main_menu" %>
    <%= link_to "Sign out", signout_path, :method => "delete", :class => "main_menu" %>
   <% else %>
    <%= link_to "Sign in", signin_path, :class => "main_menu" %>
   <% end %>
</div>
